{
  "manifest_version": 2,

  "name": "Hide Chatter",
  "description": "Hides Crowdfave.org's Chatter bar.",
  "version": "0.1",

  "permissions" : [
    "tabs",
    "activeTab"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Hide or Show the Chatter Sidebar"
  },
  "background" : {
    "scripts" : [
      "background.js"
    ]
  }
}